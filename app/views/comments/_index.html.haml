%h1.my-3 Comments
= render 'shared/error_messages', comment: @comment
- flash.each do |type, msg|
  .alert.alert-danger.mx-auto.mb-4.mt-3.w-75
    = msg
- product.comments.sort_by(&:created_at).each do |comment|
  .mt-3{ id: "comments-#{comment.id}" }
    .mx-2
      = text_area_tag 'title', comment.body, class: 'px-2 form-control mx-auto'
      .mx-2.my-auto
        Rating: #{comment.rating_to_star}
    .my-2.d-flex.justify-content-center.align-self-center
      = link_to 'Delete', comment_path(comment, product_id: @product.id), method: :delete, class: 'btn btn-outline-danger w-25 mx-2', remote: true
      = link_to 'Edit', edit_comment_path(comment, product_id: @product), method: :get, class: 'btn btn-outline-warning w-25 mx-2', remote: true
#comments-new
  = link_to 'Add comment', new_comment_path(product_id: @product), class: 'btn btn-outline-info w-50 mx-2 mt-4', remote: true
