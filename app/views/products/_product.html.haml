#products.text-center.bg-dark.row{ data: { controller: 'products' } }
  - products.each do |product|
    .col-5.border.py-4.my-4.mx-auto
      = image_tag product.image, class: 'w-75'
      .pt-2
        %h4.card-title= product.title
        %p.card-text= product.description
        %p
          price:
          = product.price
          $
        = button_to 'show',  product_category_path(product.category_id, product.id), method: 'get', class: 'btn btn-outline-success w-50'
  .d-flex.justify-content-center.my-4
    != pagy_bootstrap_nav(@pagy)
