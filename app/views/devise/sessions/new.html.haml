.text-center.border.p-5
  %h1.mb-4 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mx-auto text-center w-75', data: { turbo: false }) do |f|
    - flash.each do |_type, msg|
      .alert.alert-danger.mx-auto.mt-4.mb-2.w-75
        = msg
    = f.label :email
    = f.email_field :email, autofocus: true, class: 'form-control'
    %br
    = f.label :password
    = f.password_field :password, class: 'form-control'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    = f.submit 'Log in', class: 'btn btn-outline-success mb-4 me-2'
    = render 'devise/shared/links'

